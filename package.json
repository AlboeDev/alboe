{
  "name": "alboe",
  "packageManager": "yarn@3.4.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alboe-development/alboe.git"
  },
  "license": "MIT",
  "engines": {
    "node": "18",
    "npm": "8",
    "yarn": "3"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "postinstall": "yarn postinstall:husky",
    "postinstall:husky": "yarn husky install ./config/husky/hooks",
    "@workspaces": "yarn workspaces foreach --parallel --topological-dev --verbose",
    "@all": "yarn @workspaces run",
    "@design": "yarn @workspaces --from \"@alboe/design-*\" run"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "@rushstack/eslint-patch": "1.5.0",
    "@typescript-eslint/eslint-plugin": "6.7.3",
    "@typescript-eslint/parser": "6.7.3",
    "add": "2.0.6",
    "eslint": "8.50.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsdoc": "46.8.2",
    "eslint-plugin-tsdoc": "0.2.17",
    "husky": "8.0.3",
    "rimraf": "5.0.5",
    "typescript": "5.0.4"
  }
}
