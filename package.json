{
  "name": "alboe",
  "packageManager": "yarn@3.4.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/alboe-development/alboe.git"
  },
  "license": "MIT",
  "engines": {
    "node": "18",
    "npm": "8",
    "yarn": "3"
  },
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "postinstall": "yarn postinstall:husky",
    "postinstall:husky": "yarn husky install ./packages/config/husky/static/hooks",
    "@workspaces": "yarn workspaces foreach --parallel --topological-dev --verbose",
    "@all": "yarn @workspaces run",
    "@config": "yarn @workspaces --from \"@alboe/*-config\" run",
    "@engine": "yarn @workspaces --from \"@alboe/engine-*\" run"
  },
  "devDependencies": {
    "@alboe/husky-config": "workspace:^",
    "@commitlint/cli": "17.6.7",
    "@commitlint/config-conventional": "17.6.7",
    "eslint": "8.43.0",
    "husky": "8.0.3",
    "typescript": "4.5.2"
  }
}
